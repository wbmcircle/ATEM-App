<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/small_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_data_mic"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/circle_red"
            android:contentDescription="@string/red" />

        <ImageView
            android:id="@+id/circle_selfie_lens"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/circle_data_mic"
            android:background="@drawable/circle_yellow"
            android:contentDescription="@string/yellow" />

        <ImageView
            android:id="@+id/circle_tele_comms"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/circle_selfie_lens"
            android:background="@drawable/circle_green"
            android:contentDescription="@string/green" />

        <ImageView
            android:id="@+id/circle_rear_lens"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/circle_tele_comms"
            android:background="@drawable/circle_blue"
            android:contentDescription="@string/blue" />
        <Button
            android:id="@+id/buttonMinimize"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="XINIMIZE"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_toEndOf="@id/circle_rear_lens" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
